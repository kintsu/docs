---
import type { Props } from "@astrojs/starlight/props";
import { Pencil } from "@lucide/astro";

const { editUrl } = Astro.locals.starlightRoute;
---

{
  editUrl && (
    <a href={editUrl} class="edit-link print:hidden">
      <Pencil class="edit-icon" />
      <span>{Astro.locals.t('page.editLink')}</span>
    </a>
  )
}

<style>
  .edit-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    border-radius: 0.5rem;
    font-size: var(--sl-text-sm);
    font-weight: 500;
    text-decoration: none;
    color: var(--sl-color-gray-3);
    transition: all 0.2s ease;
  }

  .edit-link:hover {
    background: var(--sl-color-gray-6);
    color: var(--sl-color-white);
  }

  .edit-icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }
</style>
