---
import dayjs from "dayjs";
const { updates = [] } = Astro.props as {
  updates?: Array<{ author: string; date: string; description: string }>;
};

function formatDate(d: string | Date | undefined) {
  return dayjs(d).format("YYYY-MM-DD");
}

const hasUpdates = updates && updates.length > 0;
---

<section class="spec-changelog">
  {
    hasUpdates ? (
      <details class="updates-details">
        <summary class="updates-summary">{`Updates (${updates.length})`}</summary>
        <ul class="updates-list">
          {updates.map((u) => (
            <li class="update-item">
              <div class="update-head">
                <span class="update-author">{u.author}</span>
                <time class="update-date" datetime={new Date(u.date).toISOString()}>
                  {formatDate(u.date)}
                </time>
              </div>
              <div class="update-desc">{u.description}</div>
            </li>
          ))}
        </ul>
      </details>
    ) : (
      <div class="no-updates">No updates recorded.</div>
    )
  }
</section>

<style>
  .spec-changelog {
    margin-block-start: 1rem;
  }

  .updates-details {
    border-inline-start: 3px solid var(--sl-color-gray-5);
    padding: 0.75rem 1rem;
    border-radius: 0 0.5rem 0.5rem 0;
    background: var(--sl-color-gray-6);
  }

  .updates-summary {
    font-size: var(--sl-text-sm);
    font-weight: 600;
    color: var(--sl-color-gray-2);
    cursor: pointer;
    user-select: none;
  }

  .updates-summary:hover {
    color: var(--sl-color-white);
  }

  .updates-list {
    list-style: none;
    padding: 0;
    margin: 0.75rem 0 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .update-item {
    padding: 0.625rem 0.75rem;
    border-radius: 0.375rem;
    background: var(--sl-color-black);
  }

  .update-head {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    justify-content: space-between;
  }

  .update-author {
    font-size: var(--sl-text-sm);
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .update-date {
    font-size: var(--sl-text-xs);
    font-family: var(--sl-font-mono);
    color: var(--sl-color-gray-3);
  }

  .update-desc {
    margin-block-start: 0.375rem;
    font-size: var(--sl-text-sm);
    color: var(--sl-color-gray-2);
    line-height: var(--sl-line-height);
  }

  .no-updates {
    font-size: var(--sl-text-sm);
    color: var(--sl-color-gray-3);
    font-style: italic;
  }
</style>
